[alias]
	s = status
	f = fetch -a -p
	l = pull
	lr = pull --rebase
	h = push
	st = stash
	co = commit
	ca = commit -a

  # List tags
	tags = tag -l

  # List branches
	branches = branch -a

  # List remotes
	remotes = remote -v

[user]
	name = Aaron Miller
	email = "aaron@aaron-miller.net"
  signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIP4khA2osvoOxhesMgBNz7fmQI/2WFzkjRNL1I1LP3sc

[init]
	defaultBranch = main
[push]
	autoSetupRemote = true

[gpg]
	  format = ssh

[gpg "ssh"]
	  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"

[commit]
	  gpgsign = true

